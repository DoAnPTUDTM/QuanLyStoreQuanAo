
@{
    ViewBag.Title = "SignIn";
}
<!DOCTYPE html>
<html>

<!-- Head -->
<head>

    <title>Existing Login Form a Flat Responsive Widget Template :: W3layouts</title>

    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="keywords" content="" </script>
    <!-- //Meta-Tags -->

    <link href="/Format/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />

    <!-- Style -->
    <link rel="stylesheet" href="~/Format/css/style.css" type="text/css" media="all">

    <!-- Fonts -->
    <link href="//fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">
    <!-- //Fonts -->

</head>
<!-- //Head -->
<!-- Body -->
<body>

    <h1>FAMI SHOP</h1>



    <!-- for register popup -->
    <div id="small-dialog1" class="w3layoutscontaineragileits">
        <div class="contact-form1">
            <div class="contact-w3-agileits">
                <h3>ĐĂNG KÍ </h3>
                <form action="#" method="post">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <!-- Hiển thị lỗi ở đây -->
                    <div class="form-sub-w3ls">
                        <input placeholder="Họ tên" name="hoten" type="text" required="">
                        <div class="icon-agile">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                        <input placeholder="Số điện thoại" type="text" name="SoDienThoai" required="">
                        <div class="icon-agile">
                            <i class="fa fa-envelope-o" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                        <input placeholder="Email" type="email" name="email" required="">
                        <div class="icon-agile">
                            <i class="fa fa-envelope-o" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                        <input placeholder="Password" type="password" name="matkhau" required="">
                        <div class="icon-agile">
                            <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                        <input placeholder="Confirm Password" type="password" name="confirmpassword" required="">
                        <div class="icon-agile">
                            <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="submit-w3l">
                        <input type="submit" value="Register">
                    </div>
                </form>

            </div>
        </div>
    </div>
    <!-- //for register popup -->

    <div class="w3footeragile">
        <p> "Cửa hàng quần áo xin chào bạn "</p>
    </div>


    @*<script type="text/javascript" src="js/jquery-2.1.4.min.js"></script>*@

    <!-- pop-up-box-js-file -->
    <script src="js/jquery.magnific-popup.js" type="text/javascript"></script>
    <!--//pop-up-box-js-file -->
    <script>
		    $(document).ready(function() {
		    $('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
			    type: 'inline',
			    fixedContentPos: false,
			    fixedBgPos: true,
			    overflowY: 'auto',
			    closeBtnInside: true,
			    preloader: false,
			    midClick: true,
			    removalDelay: 300,
			    mainClass: 'my-mfp-zoom-in'
		    });

		    });
    </script>

</body>
<!-- //Body -->

</html>

