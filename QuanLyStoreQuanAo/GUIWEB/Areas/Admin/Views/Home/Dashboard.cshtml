@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1_Admin.cshtml";
}
<!-- Link to Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    /* Styling the card container */
    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        margin: 20px 0;
    }

    /* Card styling */
    .card {
        width: 30%;
        padding: 25px;
        text-align: center;
        border-radius: 15px;
        color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    /* Card hover effect */
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    /* Specific card color classes */
    .green {
        background-color: #28a745;
    }

    .yellow {
        background-color: #ffc107;
    }

    .blue {
        background-color: #17a2b8;
    }

    .red {
        background-color: #dc3545;
    }

    /* Card title styling */
    .card h3 {
        font-size: 32px;
        margin: 20px 0;
        font-weight: bold;
        text-transform: uppercase;
    }

    /* Card value styling */
    .card p {
        font-size: 32px;
        font-weight: bold;
        margin: 0;
        color: #f8f9fa; /* Light color to make the numbers stand out */
    }

    /* Add a background color to the number for better contrast */
    .card p b {
        font-size: 36px;
        color: white;
        background-color: rgba(0, 0, 0, 0.2); /* Dark background for contrast */
        padding: 10px 20px;
        border-radius: 8px;
    }

    /* Header styling */
    h1 {
        font-size: 40px;
        font-weight: 700;
        color: #333;
    }

    /* Add responsive design for smaller screens */
    /* Make sure these are inside the <style> block */
    media only screen and (max-width: 768px) {
        .card {
            width: 45%;
        }
    }

    media only screen and (max-width: 480px) {
        .card {
            width: 100%;
        }
    }
</style>

<div class="container">
    <h1 class="text-center my-5">TRANG CHỦ</h1>
    <div class="card-container">
        <div class="card green">
            <h3>SỐ SẢN PHẨM</h3>
            <p><b>@ViewBag.totalsp</b></p>
        </div>

        <div class="card yellow">
            <h3>SỐ LOẠI SẢN PHẨM</h3>
            <p><b>@ViewBag.totaldm</b></p>
        </div>

        <div class="card blue">
            <h3>SỐ ĐƠN HÀNG</h3>
            <p><b>@ViewBag.soluongdhtoday</b></p>
        </div>

        <div class="card red">
            <h3>DOANH THU HÔM NAY</h3>
            <p><b>@ViewBag.doanhthungay</b></p>
        </div>

        <div class="card red">
            <h3>DOANH THU THÁNG</h3>
            <p><b>@ViewBag.doanhthuthang</b></p>
        </div>

        <div class="card red">
            <h3>TỔNG ĐƠN HÀNG THÁNG</h3>
            <p><b>@ViewBag.soluongdhthang</b></p>
        </div>
    </div>
</div>

<!-- Thêm Bootstrap JS và jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
