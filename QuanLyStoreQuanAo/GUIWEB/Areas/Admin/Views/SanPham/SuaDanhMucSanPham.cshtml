@model DTO.DanhMucSanPham
@{
    ViewBag.Title = "Chỉnh sửa danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1_Admin.cshtml";
}

<div class="card">
    <div class="card-body" style="margin-top: 60px">
        <h2 class="my-4 text-center">Chỉnh sửa danh mục sản phẩm</h2>

        @using (Html.BeginForm("SuaDanhMucSanPham", "SanPham", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.MaDanhMuc)

            <div class="row">
                <div class="col-md-8 offset-md-2">

                    
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.TenDanhMuc, "Tên danh mục:", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.TenDanhMuc, new { @class = "form-control", @placeholder = "Nhập tên danh mục", required = "required" })
                        @Html.ValidationMessageFor(m => m.TenDanhMuc, "", new { @class = "text-danger" })
                    </div>

                    
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.MoTa, "Mô tả:", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.MoTa, new { @class = "form-control", @placeholder = "Nhập mô tả", required = "required" })
                        @Html.ValidationMessageFor(m => m.MoTa, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-block">Lưu thay đổi</button>
                        <a href="@Url.Action("DanhMucSanPham", "SanPham")" class="btn btn-secondary mt-2">Hủy bỏ</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
