@model DTO.KhachHang
@{
    ViewBag.Title = "Thêm Khách Hàng Mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1_Admin.cshtml";
}

<div class="card">
    <div class="card-body" style="margin-top: 60px">
        <h2 class="my-4 text-center">Thêm Khách Hàng Mới</h2>

        @using (Html.BeginForm("ThemKhachHang", "KhachHang", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-8 offset-md-2">

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.HoTen, "Họ tên:", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", @placeholder = "Nhập họ tên", required = "required" })
                        @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Email, "Email:", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Nhập địa chỉ email", type = "email", required = "required" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.SoDienThoai, "Số điện thoại:", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", @placeholder = "Nhập số điện thoại", type = "tel", required = "required" })
                        @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.MatKhau, "Mật khẩu:", htmlAttributes: new { @class = "form-label" })
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Nhập mật khẩu", required = "required" })
                        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-block">Thêm Khách Hàng</button>
                        <a href="@Url.Action("Index", "KhachHang")" class="btn btn-secondary mt-2">Quay lại</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>